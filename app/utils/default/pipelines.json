{
  "name": "exclusive_heroes",
  "pipeline": [
    {
      "$match": {
          "exclusive": {"$exists": true, "$ne": null}
        }
    },
    {
      "$sort": {"name": 1}
    },
    {
      "$group": {
        "_id": "$exclusive",
        "heroes": {
          "$push": {
            "name": "$name",
            "color": "$color",
            "stars": "$stars",
            "heroclass": "$heroclass",
            "species": "$species"
          }
        }
      }
    },
    {
      "$project": {
        "_id": 0,
        "exclusive": "$_id",
        "heroes": 1
      }
    },
    {
      "$sort": {"exclusive": 1}
    }
  ]
},
{
  "name": "exclusive_types",
  "pipeline": [
    {
      "$match": {
        "exclusive": {"$exists": true, "$ne": null}
      }
    },
    {
      "$group": {
          "_id": null,
          "exclusives": {"$addToSet": "$exclusive"}
      }
    },
    {
      "$project": {
        "_id": 0,
        "exclusives": {
          "$sortArray": {"input": "$exclusives", "sortBy": 1}
        }
      }
    }
  ]
},
{
  "name": "levels_by_gear_name_and_quality",
  "pipeline": [
    {
      "$match": {"reward_choices": {"$elemMatch": {
        "name": "gear",
        "choices": {
          "$all": [
            {
              "$elemMatch": {
                "name": "Quality",
                "choices": {"$elemMatch": {"name": "{{quality}}"}}
              }
            },
            {
              "$elemMatch": {
                "name": "Item",
                "choices": {"$elemMatch": {"name": "{{item}}"}}
              }
            }
          ]
        }
      }}}
    }
  ]
},
{
