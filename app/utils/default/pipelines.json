{
  "name": "unique_gear",
  "pipeline": [
    {
      "$match": {
        "gear": {
          "$exists": true,
          "$ne": []
        }
      }
    },
    {
      "$unwind": "$gear"
    },
    {
      "$match": {
        "gear.name": {
          "$ne": null
        },
        "gear.position": "{{position}}",
        "type": "{{type}}"
      }
    },
    {
      "$group": {
        "_id":{
          "name": "$gear.name",
          "position": "$gear.position"
        },
        "types": {
          "$addToSet": "$type"
        }
      }
    },
    {
      "$project": {
        "_id": 0,
        "name": "$_id.name",
        "position": "$_id.position",
        "types": 1
      }
    }
  ]
},
{
  "name": "list_all_gear",
  "pipeline": [
    {
      "$unwind": "$gear"
    },
    {
      "$match": {
        "gear.name": {
          "$ne": null
        }
      }
    },
    {
      "$project": {
        "_id": 0,
        "gear_only": "$gear.name",
        "gear_and_quality": {
          "$concat": ["$gear.quality", " ", "$gear.name"]
        }
      }
    },
    {
      "$group": {
        "_id": null,
        "gears": {
          "$addToSet": "$gear_only"
        },
        "gears_with_quality": {
          "$addToSet": "$gear_and_quality"
        }
      }
    },
    {
      "$project": {
        "_id": 0,
        "gears": {
          "$setUnion": ["$gears", "$gears_with_quality"]
        }
      }
    }
  ]
},
{
  "name": "spire_by_date",
