[{
  "_id": {
    "$oid": "66d0671ee392f6e1e03302a8"
  },
  "name": "heroes_by_gear_name",
  "pipeline": [
    {
      "$match": {
        "gear": {
          "$exists": true,
          "$ne": []
        }
      }
    },
    {
      "$unwind": "$gear"
    },
    {
      "$match": {
        "gear.name": "{{gear_name}}"
      }
    },
    {
      "$group": {
        "_id": "$_id",
        "name": {
          "$first": "$name"
        },
        "gear": {
          "$push": {
            "ascend": "$gear.ascend",
            "quality": "$gear.quality"
          }
        },
        "heroclass": {
          "$first": "$heroclass"
        },
        "color": {
          "$first": "$color"
        },
        "stars": {
          "$first": "$stars"
        }
      }
    }
  ]
},
